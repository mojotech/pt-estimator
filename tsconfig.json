{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./client",
    "paths": {
      "~*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "rootDirs": ["src", "components"],
    "types": ["react"],
    "strictNullChecks": true
  },
  "include": ["client/**/*"]
}
